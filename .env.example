# ==========================================
# Lumina Agency - Environment Variables
# ==========================================

# Database Configuration
# For SQLite (local development):
# DATABASE_URL="file:./dev.db"
# For MySQL (production):
DATABASE_URL="mysql://lumina_user:lumina_pass_123@localhost:3306/lumina_db"

# MySQL Docker Settings
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=lumina_db
MYSQL_USER=lumina_user
MYSQL_PASSWORD=lumina_pass_123

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production-32chars"

# Admin Setup (change these!)
ADMIN_EMAIL="admin@lumina.agency"
ADMIN_PASSWORD="admin123456"

# Email Service (Resend) - Optional
RESEND_API_KEY="re_your_api_key_here"

# Firebase Analytics - Get these from Firebase Console
# Go to: Firebase Console > Project Settings > General > Your apps > Firebase SDK snippet
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"
